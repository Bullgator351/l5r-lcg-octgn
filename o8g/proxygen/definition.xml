<?xml version="1.0" encoding="UTF-8"?>
<templates>
  <blocks>
    <block type="overlay" id="character-base-crab" src="proxygen/images/character-base-crab.png"><location x="0" y="0"/></block>
    <block type="text" id="character-name">
      <location x="29" y="358" rotate="270" />
      <text color="#000000" size="23" font="fonts/name.ttf"/>
      <wordwrap height="34" width="230" align="center" valign="center" shrinktofit="True"/>
    </block>
    <block type="text" id="character-traits">
      <location x="70" y="415"/>
      <text color="#000000" size="21" font="fonts/traits.ttf"/>
      <wordwrap height="34" width="300" align="center" shrinktofit="True"/>
    </block>

    <block type="overlay" id="attachment-base-crab" src="proxygen/images/attachment-base-crab.png"><location x="0" y="0"/></block>
    <block type="text" id="attachment-name">
      <location x="29" y="358" rotate="270" />
      <text color="#000000" size="23" font="fonts/name.ttf"/>
      <wordwrap height="34" width="230" align="center" valign="center" shrinktofit="True"/>
    </block>
    <block type="text" id="attachment-traits">
      <location x="70" y="415"/>
      <text color="#000000" size="21" font="fonts/traits.ttf"/>
      <wordwrap height="34" width="300" align="center" shrinktofit="True"/>
    </block>
  </blocks>

  <template src="proxygen/images/empty.png">
    <matches><match name="Type" value="Character"/></matches>

    <overlayblocks>
      <conditional>
        <switch property="Clan">
          <case value="Crab"><link block="character-base-crab"/></case>
        </switch>
      </conditional>
    </overlayblocks>

    <textblocks>
      <link block="character-name"><property name="Name"/></link>
      <link block="character-traits"><property name="Traits"/></link>
    </textblocks>
  </template>

  <template src="proxygen/images/empty.png">
    <matches><match name="Type" value="Attachment"/></matches>

    <overlayblocks>
      <conditional>
        <switch property="Clan">
          <case value="Crab"><link block="attachment-base-crab"/></case>
        </switch>
      </conditional>
    </overlayblocks>

    <textblocks>
      <link block="attachment-name"><property name="Name"/></link>
      <link block="attachment-traits"><property name="Traits"/></link>
    </textblocks>
  </template>
</templates>
